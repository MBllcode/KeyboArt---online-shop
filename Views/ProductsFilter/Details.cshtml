@model Product

@{
    ViewData["Title"] = "Produkt";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">

<section style="">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-md-7 col-lg-6 col-xl-5 col-sm-8">
                <div class="card" style="border-radius: 15px;">
                    <div class="bg-image hover-overlay ripple ripple-surface ripple-surface-light"
                         data-mdb-ripple-color="light">
                        <img src="@Html.DisplayFor(model => model.ImageURL)"
                             style="border-top-left-radius: 15px; border-top-right-radius: 15px; width: 100%" class="img-fluid"
                             alt="Produkt" />
                        <a href="#!">
                            <div class="mask"></div>
                        </a>
                    </div>
                    <div class="card-body pb-0">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="float-left pt-1">@Html.DisplayFor(model => model.Name)</h5>
                                <p class="text-muted"></p>
                            </div>
                            <p style="font-size: 20px;" class="font-weight-normal float-right">@Html.DisplayFor(model => model.Price)</p>
                        </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body pb-0">
                        <div class="d-flex justify-content-between">

                        </div>
                        <p class="text-muted font-italic ml-2">@Html.DisplayFor(model => model.Description)</p>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center pb-2 mb-1">
                            <a class="btn btn-outline-secondary" type="button" asp-controller="ProductsFilter" asp-action="Index"> Powrót </a>
                            <a type="button" class="btn btn-success" asp-controller="Orders" asp-action="AddToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Do koszyka</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

