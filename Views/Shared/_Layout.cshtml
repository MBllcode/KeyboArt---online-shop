<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KeyboArt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.2/font/bootstrap-icons.css">
    <style>
        .fixed-top {
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar header_menu_1 pt-30 pb-30 mt-30 fixed-top navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand font-weight-bold" style="font-size: 1.6rem;" asp-area="" asp-controller="Home" asp-action="Index">Keybo<span class="text-warning">Art</span> <i class="bi bi-keyboard" style="font-size: 2.5rem;"></i></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @await Component.InvokeAsync("ShoppingCartSummary")
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ml-2 justify-content-between">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size: 1.1rem;" asp-area="" asp-controller="ProductsFilter" asp-action="Index"><i class="bi bi-shop"></i> Sklep</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark " style="font-size: 1.1rem;" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-bag"></i> Produkty
                            </a>

                            <div class="dropdown-menu mb-3" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item text-dark" style="font-size: 1.1rem;" asp-area="" asp-controller="ProductsFilter" asp-action="Keyboards"><i class="bi bi-dot"></i>Klawiatury</a>
                                <a class="dropdown-item text-dark" style="font-size: 1.1rem;" asp-area="" asp-controller="ProductsFilter" asp-action="Cases"><i class="bi bi-dot"></i>Obudowy</a>
                                <a class="dropdown-item text-dark" style="font-size: 1.1rem;" asp-area="" asp-controller="ProductsFilter" asp-action="Switches"><i class="bi bi-dot"></i>Przełączniki</a>
                                <a class="dropdown-item text-dark" style="font-size: 1.1rem;" asp-area="" asp-controller="ProductsFilter" asp-action="Keycaps"><i class="bi bi-dot"></i>Nasadki</a>
                                <a class="dropdown-item text-dark" style="font-size: 1.1rem;" asp-area="" asp-controller="ProductsFilter" asp-action="Plates"><i class="bi bi-dot"></i>Płyty PCB</a>
                                <a class="dropdown-item text-dark" style="font-size: 1.1rem;" asp-area="" asp-controller="ProductsFilter" asp-action="Accesories"><i class="bi bi-dot"></i>Akcesoria</a>
                            </div>
                        </li>
                    </ul>

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="navbar-brand float-right ml-auto" asp-area="" asp-controller="Account" asp-action="Login">Zaloguj się <i class="bi bi-person"></i></a>
                        <a class="navbar-brand float-right" asp-area="" asp-controller="Account" asp-action="Register">Załóż konto</a>
                        <form class="navbar-form navbar-left" asp-controller="ProductsFilter" asp-action="Filter">
                            <div class="input-group">
                                <input name="searchString" type="text" class="form-control" placeholder="Szukaj">
                                <div class="input-group-btn">
                                    <button class="btn btn-default bg-warning" type="submit">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    }

                    <ul class="navbar-nav">

                        <partial name="_Identity.cshtml" />
                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div style="margin-top: 100px;" class="container">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - KeyboArt
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
